<%- include('../layouts/header.ejs'); %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="text-center mt-3">Create Your Identity</h3>
    </div>
    <div class="card-body">
      <form action="/adobts/create" method="post">
        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example3">Name</label>
          <input type="text" id="name" name="name" class="form-control" />
        </div>

        <!-- Message input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example7">Address</label>
          <textarea
            class="form-control"
            id="address"
            name="address"
            rows="4"
          ></textarea>
        </div>

        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="email">E-Mail</label>
          <input type="email" id="email" name="email" class="form-control" />
        </div>

        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example3">Phone Number</label>
          <input type="text" id="phone" name="phone" class="form-control" />
        </div>

        <div class="form-outline mb-4" hidden>
          <label class="form-label" for="form6Example3">petId</label>
          <input
            type="text"
            id="petId"
            name="petId"
            class="form-control"
            value="<%= pets.id %>"
          />
        </div>

        <!-- Submit button -->
        <div class="row">
          <div class="col-11">
            <a href="/pets" class="btn btn-warning">Cancel</a>
          </div>
          <div class="col-1">
            <button type="submit" class="btn btn-primary btn-block mb-4">
              Add
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

