<%- include('../layouts/header.ejs'); %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="text-center mt-3">Create Pet</h3>
    </div>
    <div class="card-body">
      <form action="/pets/create" method="post">
        <div class="row mb-4">
          <div class="col">
            <div class="form-outline">
              <select
                class="form-select"
                name="pet_type"
                for="pet_type"
                id="pet_type"
              >
                <option name="pet_type" value="Dog">Dog</option>
                <option name="pet_type" value="Cat">Cat</option>
              </select>
              <label class="form-label" for="pet_type">Type</label>
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input type="text" id="race" name="race" class="form-control" />
              <label class="form-label" for="form6Example4">Race</label>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="age"
                name="age"
                class="form-control"
                placeholder="In Month..."
              />
              <label class="form-label" for="form6Example5"
                >Age (in Month)</label
              >
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="price"
                name="price"
                class="form-control"
              />
              <label class="form-label" for="form6Example6">Price</label>
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="stock"
                name="stock"
                class="form-control"
              />
              <label class="form-label" for="stock">Stock</label>
            </div>
          </div>
        </div>

        <!-- Submit button -->
        <div class="row">
          <div class="col-11">
            <a href="/pets" class="btn btn-warning">Cancel</a>
          </div>
          <div class="col-1">
            <button type="submit" class="btn btn-primary btn-block mb-4">
              Add
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

