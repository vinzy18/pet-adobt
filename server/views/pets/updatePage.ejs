<%- include('../layouts/header.ejs'); %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="text-center mt-3">Edit Pet</h3>
    </div>
    <div class="card-body">
      <form action="/pets/update/<%= pets.id %>" method="post">
        <div class="row mb-4">
          <div class="col">
            <div class="form-outline">
              <input
                type="text"
                id="pet_type"
                name="pet_type"
                class="form-control"
                value="<%= pets.pet_type %>"
              />
              <label class="form-label" for="form6Example3">Type</label>
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input
                type="text"
                id="race"
                name="race"
                class="form-control"
                value="<%= pets.race %>"
              />
              <label class="form-label" for="form6Example4">Race</label>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="age"
                name="age"
                class="form-control"
                value="<%= pets.age %>"
              />
              <label class="form-label" for="form6Example5">Age</label>
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="price"
                name="price"
                class="form-control"
                value="<%= pets.price %>"
              />
              <label class="form-label" for="form6Example6">Price</label>
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <input
                type="number"
                id="stock"
                name="stock"
                class="form-control"
                value="<%= pets.stock %>"
              />
              <label class="form-label" for="form6Example6">Stock</label>
            </div>
          </div>
        </div>

        <!-- Submit button -->
        <div class="row">
          <div class="col-11">
            <a href="/pets" class="btn btn-warning">Cancel</a>
          </div>
          <div class="col-1">
            <button type="submit" class="btn btn-primary btn-block mb-4">
              Edit
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
  integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
  crossorigin="anonymous"
></script>
