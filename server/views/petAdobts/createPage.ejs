<%- include('../layouts/header.ejs'); %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h3 class="text-center mt-3">Get Adobt this Pet</h3>
    </div>
    <div class="card-body">
      <form action="/petAdobts/create" method="post">
        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example3">Name</label>
          <select id="adobtId" name="adobtId" class="form-select">
            <% adobts.forEach(adobt => {%>
            <option value="<%= adobt.id %>"><%= adobt.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- <div class="form-outline mb-4">
          <label class="form-label" for="form6Example3">Phone Number</label>
          <input
            type="text"
            id="phone"
            name="phone"
            class="form-control"
            placeholder="Fill with your phone number you filled before..."
          />
        </div> -->

        <!-- Message input -->
        <div class="form-outline mb-4" hidden>
          <label class="form-label" for="form6Example7">Pet Id</label>
          <input
            type="text"
            id="petId"
            name="petId"
            class="form-control"
            value="<%= pets.id %>"
          />
        </div>

        <!-- Submit button -->
        <div class="row">
          <div class="col-11">
            <a href="/pets" class="btn btn-warning">Cancel</a>
          </div>
          <div class="col-1">
            <button type="submit" class="btn btn-primary btn-block mb-4">
              Add
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

